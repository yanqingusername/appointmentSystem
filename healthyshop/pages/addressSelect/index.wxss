.page{
  width:100%;
  overflow-x:hidden;
  /* height: 100%; */
  background-color: #F5F5F5;
}

.subject_view {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  /* background: #FFFFFF; */
  border-radius: 10px;
  margin-top: 30rpx;
}

.subject_view_white {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 690rpx;
  background: #FFFFFF;
  border-radius: 10px;
  padding: 28rpx 0rpx;
  font-size: 32rpx;
  color: #E06596;
}

.icon_add{
  width: 40rpx;
  height: 40rpx;
}

.subject_item{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  /* background: #FFFFFF; */
  border-radius: 10px;
  margin-top: 30rpx;
}

.subject_view_bg {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 690rpx;
  background: #FFFFFF;
  border-radius: 10px;
  padding: 28rpx 30rpx 28rpx 30rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.subject_title{
  font-size: 40rpx;
font-weight: 500;
color: #333333;
flex-wrap: wrap;
    overflow-wrap: anywhere;
    word-break: break-all;
}

.subject_text{
  font-size: 32rpx;
font-weight: 400;
color: #999999;
}

.right_arrow {
  height: 40rpx;
  width: 40rpx;
}