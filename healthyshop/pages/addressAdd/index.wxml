<wxs src="../../../utils/substring.wxs" module="tools" />

<cu-custom isBack="{{true}}" bgColor="bg-white">
  <view slot="backText" bindtap="bindBack"></view>
  <view slot="content">{{title}}</view>
</cu-custom>

<view class="page">
      <view class="medWhite">
        <view style="height: 2rpx;"></view>
        <view class="P5 app_flex" style="margin: 14rpx 0rpx 10rpx 0rpx;">
          <view class="P5_1 app_font">姓名</view>
          <input class="P5_2 app_font" placeholder="请填写联系人姓名" placeholder-class="place_style" bindinput="bindName" style="position:relative;right:20rpx" maxlength="50" value="{{address_person}}"></input>
        </view>
        <view style="height: 2rpx;background:#DDDDDD;margin: 0rpx 20rpx;"></view>

        <view class="P5 app_flex" style="margin: 16rpx 0rpx 10rpx 0rpx;">
          <view class="P5_1 app_font">手机号</view>
          <input class="P5_2 " style="position:relative;right:20rpx" type="number" placeholder="请输入联系人手机号" placeholder-class="place_style" bindinput="bindPhone" maxlength="11" value="{{address_phone}}"></input>
          <view id="clear_1" style="padding:16rpx;right: -20rpx;" wx:if="{{address_phone}}" catch:tap="clearPhone">
            <image class="icon_clear" src="../../../images/icon_clear.png"></image>
          </view>
        </view>

        <view style="height: 2rpx;background:#DDDDDD;margin: 0rpx 20rpx;"></view>

        <view class="P5 app_flex" style="margin: 16rpx 0rpx 10rpx 0rpx;">
          <view class="P5_1 app_font">所在地区</view>
          <view class="section" style="width: 80%;height:84rpx;margin-left:12rpx;font-size:30rpx;display: flex;position: relative;">
            <picker style="height:100%;margin-top:20rpx;width:90%;" mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
              <view class="picker" wx:if="{{isShowRegion == 2}}">{{region[0]}}，{{region[1]}}，{{region[2]}}</view>
              <view class="picker" style="color: #B1B1B1;" wx:else>请选择所在地区</view>
            </picker>
            <view style="margin-right:0rpx;align-items: center;display: flex;position: absolute;right: 0rpx;top: 16rpx;">
              <image class="right_arrow" src="../../../images/rightArrow.png"></image>
            </view>
          </view>
        </view>
        <view style="height: 2rpx;background:#DDDDDD;margin: 0rpx 20rpx;"></view>

        <view class="P5 app_flex_new" style="margin: 34rpx 0rpx 34rpx 0rpx;">
          <view class="P5_1_news app_font" style="padding: 0rpx 0rpx 0rpx 20rpx;">详细地址</view>
          <!-- <input class="P5_2 app_font" type="text" placeholder="请填写详细地址" placeholder-class="place_style" bindinput="updateLocation" value="{{address}}" style="position:relative;right:20rpx" maxlength="200"></input> -->
          <textarea style="width: 70%;color: #333333;text-align: left;" auto-height placeholder-class="place_style" placeholder='请填写详细地址' name="address"  bindinput="updateLocation" value="{{address}}" maxlength="200"></textarea>
        </view>

        <view style="height: 10rpx;"></view>
      </view>

      <view class="div_policy">
        <checkbox-group bindchange="changePolicy">
          <checkbox class='round pink' checked="{{policyChecked}}" id="privacy_radio"></checkbox>

          <label for="privacy_radio" id="privacy_policy">
            已阅读并同意 <text class="underline_gray" catchtap="bindUserProtocol">用户服务协议</text> 和 <text class="underline_gray" catchtap="bindPrivacyPolicy">隐私政策</text>
          </label>
        </checkbox-group>
      </view>

      <view class="button_gray" wx:if="{{submitState}}">保存</view>

      <view class="button_submit" wx:else bind:tap="submitBuffer">保存</view>

      <view class="button_delete" wx:if="{{isAddAddress == 2}}" bind:tap="bindDeleteClick">删除地址</view>
</view>

<!-- 删除弹框 -->
<modalView show="{{showDialog}}"  datas="{{dialogData}}" bind:dialogCancel="dialogCancel" bind:dialogSure="dialogSure" types="1" />
 