<cu-custom isBack="{{true}}" bgColor="bg-white">
	<view slot="backText" bindtap="bindBack" />
	<view slot="content">修改手机号</view>
</cu-custom>

<view class="page">
	<view class="page_view">
    <view class="page_view">
      <view class="input_view">
        <input
        id="search_checked"
        type='text'
        placeholder='请输入新的手机号'
        placeholder-class="ph_class"
        value="{{sample_number}}"
        />
      </view>

      <view class="input_view_code">
        <input
        id="search_code"
        type='text'
        placeholder='短信验证码'
        placeholder-class="ph_class"
        value="{{sample_phone}}"
        />
        <view class="P3_code" bindtap="getCode" disabled="{{codeBtState}}" style="{{codeBtState?'color:#CCCCCC':'color:#E16898'}};">{{codeBtText}}</view>
      </view>

      <view class="btn_view" bind:tap="bindSubmit">保存</view>
    </view>
	</view>
</view>

